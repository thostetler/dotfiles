" bash set as default shell (for compatibility) by webinstall.dev/vim-shell
set shell=bash

" Set Leader to Space (with \ and , as aliases) by webinstall.dev/vim-leader
let mapleader = " "
nmap <bslash> <space>
nmap , <space>


" vim-sensible: installed via webinstall.dev/vim-sensible
source ~/.vim/plugins/sensible.vim

" Vim Info: reasonable defaults (buffers, history, etc) from webinstall.dev/vim-viminfo
source ~/.vim/plugins/viminfo.vim

" lastplace: explicit defaults from webinstall.dev/vim-lastplace
source ~/.vim/plugins/lastplace.vim

" Smart Case: reasonable defaults from webinstall.dev/vim-smartcase
source ~/.vim/plugins/smartcase.vim

" Spell Check: reasonable defaults from webinstall.dev/vim-spell
source ~/.vim/plugins/spell.vim

" ALE: reasonable defaults from webinstall.dev/vim-ale
source ~/.vim/plugins/ale.vim

" Tab & Whitespace: reasonable defaults from webinstall.dev/vim-whitespace
source ~/.vim/plugins/whitespace.vim

" shfmt: reasonable defaults from webinstall.dev/vim-shfmt
source ~/.vim/plugins/shfmt.vim

" Prettier: reasonable defaults from webinstall.dev/vim-prettier
source ~/.vim/plugins/prettier.vim

" NERDTree: reasonable defaults from webinstall.dev/vim-nerdtree
source ~/.vim/plugins/nerdtree.vim

" Mouse Support: reasonable defaults from webinstall.dev/vim-mouse
source ~/.vim/plugins/mouse.vim

" devicons: reasonable defaults from webinstall.dev/vim-devicons
source ~/.vim/plugins/devicons.vim

" vim-commentary: installed via webinstall.dev/vim-commentary
source ~/.vim/plugins/commentary.vim

" vim-airline: reasonable defaults from webinstall.dev/vim-airline
source ~/.vim/plugins/airline.vim
